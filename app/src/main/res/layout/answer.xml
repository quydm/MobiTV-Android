<?xml version="1.0" encoding="utf-8"?>
<vn.net.mobitv.customview.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
                                                  android:orientation="horizontal">

    <vn.net.mobitv.customview.InertCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/radio_button_bg"
        android:focusable="false"/>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginStart="@dimen/size_10dp"
        android:focusable="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_14sp"/>

</vn.net.mobitv.customview.CheckableRelativeLayout>